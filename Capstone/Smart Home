<script>
// Alert Distribution Chart
const alertCtx = document.getElementById('alertChart').getContext('2d');
new Chart(alertCtx, {
    type: 'doughnut',
    data: {
        labels: ['Motion Detection', 'Camera Offline', 'Unauthorized Access', 'System Warnings'],
        datasets: [{
            data: [45, 15, 25, 15],
            backgroundColor: [
                '#0088FE',
                '#FF8042',
                '#FFBB28',
                '#FF0000'
            ]
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'bottom'
            }
        }
    }
});

// System Health Chart
const healthCtx = document.getElementById('healthChart').getContext('2d');
new Chart(healthCtx, {
    type: 'line',
    data: {
        labels: ['00:00', '04:00', '08:00', '12:00', '16:00', '20:00'],
        datasets: [{
            label: 'Uptime %',
            data: [100, 98, 99, 100, 97, 99],
            borderColor: '#0088FE',
            tension: 0.1
        },
        {
            label: 'Storage %',
            data: [75, 78, 82, 85, 88, 90],
            borderColor: '#00C49F',
            tension: 0.1
        },
        {
            label: 'Network %',
            data: [95, 92, 97, 96, 94, 98],
            borderColor: '#FFBB28',
            tension: 0.1
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'bottom'
            }
        },
        scales: {
            y: {
                beginAtZero: false,
                min: 50,
                max: 100
            }
        }
    }
});
</script>
